# media-hub-server/.env
# 本地开发环境配置

# ===========================================
# 数据库配置
# ===========================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/media_hub_dev"

# ===========================================
# JWT认证配置
# ===========================================
JWT_SECRET="dev-jwt-secret-key-change-in-production-very-long-and-secure"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_EXPIRES_IN="30d"

# ===========================================
# Redis配置 (使用6380端口避免冲突)
# ===========================================
REDIS_HOST="localhost"
REDIS_PORT=6380
REDIS_PASSWORD=""
REDIS_DB=0

# ===========================================
# 短信服务配置 (暂时使用模拟模式)
# ===========================================
# 开发模式 - 使用控制台输出代替真实短信
SMS_PROVIDER="mock"  
# 生产环境切换为 "aliyun"

# 阿里云短信配置 (生产环境使用)
# ALIYUN_ACCESS_KEY_ID="your-access-key"
# ALIYUN_ACCESS_KEY_SECRET="your-secret"
# ALIYUN_SMS_SIGN_NAME="your-sign-name"  
# ALIYUN_SMS_TEMPLATE_CODE="SMS_123456789"

# ===========================================
# 应用配置
# ===========================================
NODE_ENV="development"
PORT=3000
API_PREFIX="/api/v1"

# 日志级别
LOG_LEVEL="debug"

# ===========================================
# 安全配置 (开发环境)
# ===========================================
# API限流 (开发环境放宽)
THROTTLE_TTL=60000      # 1分钟
THROTTLE_LIMIT=1000     # 1000次请求/分钟

# 密码加密强度 (开发环境可以降低)
BCRYPT_ROUNDS=10

# ===========================================
# 支付配置 (暂时禁用)
# ===========================================
PAYMENT_ENABLED=false

# 支付宝配置 (生产环境使用)
# ALIPAY_APP_ID=""
# ALIPAY_PRIVATE_KEY=""
# ALIPAY_PUBLIC_KEY=""
# ALIPAY_GATEWAY="https://openapi.alipaydev.com/gateway.do"  # 沙箱环境

# 微信支付配置 (生产环境使用)
# WECHAT_APP_ID=""
# WECHAT_MCH_ID=""
# WECHAT_KEY=""

# ===========================================
# 邮件服务配置 (暂时禁用)
# ===========================================
EMAIL_ENABLED=false

# ===========================================
# 开发工具配置
# ===========================================
# Swagger文档
SWAGGER_ENABLED=true
SWAGGER_PATH="/api/docs"

# 数据库调试
PRISMA_LOG_QUERIES=true

# 开发模式特性
DEV_MODE=true
MOCK_EXTERNAL_SERVICES=true
