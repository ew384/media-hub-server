# 应用配置
NODE_ENV=development
PORT=3000

# 数据库
DATABASE_URL="postgresql://auth_user:auth_password@localhost:5432/auth_db?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# 阿里云短信
ALIYUN_ACCESS_KEY_ID="your-aliyun-access-key-id"
ALIYUN_ACCESS_KEY_SECRET="your-aliyun-access-key-secret"
ALIYUN_SMS_SIGN_NAME="您的签名"
ALIYUN_SMS_TEMPLATE_CODE="SMS_123456789"
ALIYUN_SMS_REGION="cn-hangzhou"

# 短信配置
SMS_CODE_EXPIRE_TIME=300
SMS_DAILY_LIMIT=10
SMS_RATE_LIMIT_PER_MINUTE=3

# 安全配置
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW=3600

# 接口限流
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Swagger
SWAGGER_TITLE="Auth Server API"
SWAGGER_DESCRIPTION="自媒体多账号管理系统用户认证服务"
SWAGGER_VERSION="1.0"