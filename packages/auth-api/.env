# packages/auth-api/.env
PORT=3100
NODE_ENV=development

# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/media_hub"

# Redis配置  
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# 限流配置
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# 短信配置（本地测试可以先留空）
ALIYUN_ACCESS_KEY_ID=
ALIYUN_ACCESS_KEY_SECRET=
ALIYUN_SMS_SIGN_NAME=
ALIYUN_SMS_TEMPLATE_CODE=
SMS_CODE_EXPIRE_TIME=300
SMS_DAILY_LIMIT=10
SMS_RATE_LIMIT_PER_MINUTE=3

# Swagger配置
SWAGGER_TITLE=Media Hub Auth API
SWAGGER_DESCRIPTION=自媒体多账号管理系统用户认证服务
SWAGGER_VERSION=1.0.0
