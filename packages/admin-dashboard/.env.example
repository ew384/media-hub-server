# Next.js配置
NEXT_PUBLIC_APP_NAME="自媒体管理后台"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# API配置
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_WS_URL="ws://localhost:3001"

# 认证配置
NEXTAUTH_URL="http://localhost:3102"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
JWT_SECRET="your-jwt-secret-key-here"

# 数据库配置（如果需要）
DATABASE_URL="postgresql://username:password@localhost:5432/admin_db"

# Redis配置（如果需要）
REDIS_URL="redis://localhost:6380"

# 其他配置
NEXT_PUBLIC_PAGE_SIZE=20
NEXT_PUBLIC_CHART_THEME="light"
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# 上传文件配置
NEXT_PUBLIC_UPLOAD_MAX_SIZE=10485760
NEXT_PUBLIC_UPLOAD_ALLOWED_TYPES="image/*,application/pdf,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"

# 邮件服务配置（可选）
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""

# 短信服务配置（可选）
SMS_ACCESS_KEY=""
SMS_SECRET_KEY=""
