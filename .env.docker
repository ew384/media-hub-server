# .env.docker - Docker环境变量配置
# 复制此文件为 .env 并根据需要修改

# ===========================================
# JWT认证配置 - 所有服务必须使用相同密钥
# ===========================================
JWT_SECRET=your-super-secure-jwt-secret-for-production-change-this-long-key
NEXTAUTH_SECRET=your-nextauth-secret-for-production

# ===========================================
# 数据库配置
# ===========================================
DATABASE_URL=postgresql://postgres:password@postgres:5432/media_hub_dev
POSTGRES_DB=media_hub_dev
POSTGRES_USER=postgres  
POSTGRES_PASSWORD=password

# ===========================================
# Redis配置
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# 外部服务配置（Mock模式）
# ===========================================
# 短信服务
SMS_PROVIDER=mock
MOCK_EXTERNAL_SERVICES=true

# 支付服务
PAYMENT_TEST_MODE=true
PAYMENT_ENABLED=false

# 邮件服务
EMAIL_ENABLED=false

# ===========================================
# API服务URL（容器内部通信）
# ===========================================
AUTH_API_URL=http://auth-api:3100
SUBSCRIPTION_API_URL=http://subscription-api:3101
PAYMENT_API_URL=http://payment-api:3102

# ===========================================
# 前端配置（浏览器访问）
# ===========================================
NEXT_PUBLIC_AUTH_API_URL=http://localhost:3100/api/v1
NEXT_PUBLIC_SUBSCRIPTION_API_URL=http://localhost:3101
NEXT_PUBLIC_PAYMENT_API_URL=http://localhost:3102
NEXTAUTH_URL=http://localhost:3103
FRONTEND_URL=http://localhost:3103

# ===========================================
# 开发工具配置
# ===========================================
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin123

# ===========================================
# 日志级别
# ===========================================
LOG_LEVEL=info
NODE_ENV=production
